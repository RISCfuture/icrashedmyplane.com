{
  "compilerOptions": {
    "target":                           "esnext",
    "module":                           "esnext",
    "strict":                           true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution":                 "node",
    "resolveJsonModule":                true,
    "experimentalDecorators":           true,
    "skipLibCheck":                     true,
    "allowSyntheticDefaultImports":     true,
    "useDefineForClassFields":          true,
    "types":                            [
      "node",
      "mocha",
      "chai"
    ],
    "paths":                            {
      "@/*": [
        "../../src/*"
      ]
    },
    "lib":                              [
      "esnext",
      "dom",
      "dom.iterable"
    ]
  },
  "include":         [
    "**/*.ts"
  ]
}
