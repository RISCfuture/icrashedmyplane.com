{
  "compilerOptions": {
    "target":                       "esnext",
    "module":                       "esnext",
    "strict":                       true,
    "jsx":                          "preserve",
    "importHelpers":                true,
    "moduleResolution":             "node",
    "resolveJsonModule":            true,
    "experimentalDecorators":       true,
    "esModuleInterop":              true,
    "allowSyntheticDefaultImports": true,
    "sourceMap":                    true,
    "baseUrl":                      ".",
    "outDir":                       "dist/",
    "paths":                        {
      "@/*": [
        "src/*"
      ]
    },
    "lib":                          [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include":         [
    "src/**/*.ts",
    "tests/unit/**/*.ts",
  ],
  "exclude":         [
    "node_modules"
  ]
}
