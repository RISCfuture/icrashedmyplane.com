{
  "compilerOptions": {
    "target":                       "es2019",
    "module":                       "esnext",
    "strict":                       true,
    "jsx":                          "preserve",
    "importHelpers":                true,
    "moduleResolution":             "node",
    "resolveJsonModule":            true,
    "experimentalDecorators":       true,
    "skipLibCheck":                 true,
    "esModuleInterop":              true,
    "allowSyntheticDefaultImports": true,
    "sourceMap":                    true,
    "baseUrl":                      ".",
    "types":                        [
      "webpack-env",
      "mocha",
      "chai"
    ],
    "paths":                        {
      "@/*": [
        "src/*"
      ]
    },
    "lib":                          [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include":         [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/unit/**/*.ts",
    "tests/unit/**/*.tsx"
  ],
  "exclude":         [
    "node_modules"
  ]
}
